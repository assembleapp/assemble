<div class="layout-column-left">
  <div class="section">
    <%= image_tag @block.icon, style: "height: 3rem" %>

    <h1>
      <%= link_to @block.user.username, @block.user %>
      /
      <%= @block.name %>
    </h1>

    <p class="hint">
    Built from <%= link_to @block.github_repo, "https://github.com/#{@block.github_repo}" %>
    <br/>
    on <%= l(@block.created_at.to_date) %>
    </p>
  </div>

  <div class="section">
    <h2>Description</h2>
    <p>
      <%= @block.description %>
    </p>
  </div>
</div>

<div class="layout-column-right">
  <div class="section">
    <h2>Inputs</h2>

    <% if @block.user == current_user %>
      <p class="hint">
      <%= link_to(
        "Edit the block's input schema",
        edit_block_path(@block.user, @block)
      ) %>
      to help users understand the inputs that it accepts.
      </p>
    <% end %>

    <%= react_component "Schema", initialValue: @block.schema, editable: false %>
  </div>

  <div class="section">
    <h2>Try it out</h2>

    <p class="hint">
    In your command line, run:
    </p>

    <pre>
    curl \
    <%= block_runs_url(@block.user, @block) %> \
    -X POST \
    -d '{ "input_data": "goes_here" }'
    </pre>
  </div>
</div>
