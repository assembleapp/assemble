<div class="layout-column-aside">
  <%= avatar_for @user %>
  <h1><%= @user.username %></h1>

  <div>
    Joined <%= time_ago_in_words(@user.created_at) %> ago
  </div>
</div>

<div class="layout-column-main">
  <%= render "apps_list", apps: @user.apps, title: "#{@user.username}'s apps" %>
  <%= render "blocks_list", blocks: @user.blocks, title: "#{@user.username}'s blocks" %>
</div>
